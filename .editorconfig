root = true

[*.{appxmanifest,axaml,axml,build,c,config,cs,csproj,cpp,dbml,discomap,dtd,html,js,json,jsproj,lsproj,md,njsproj,nuspec,paml,proj,props,proto,resjson,StyleCop,targets,tasks,vbproj,xaml,xamlx,xml,xoml,xsd}]
